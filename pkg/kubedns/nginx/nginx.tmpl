http {
    {{range .Servers}}
    server {
        listen 0.0.0.0:{{.Port}};
        server_name {{.ServerName}};

        {{range .Locations}}
        location /{{.Path}}/ {
            access_log /var/log/nginx/access.log;
            rewrite ^/{{.Path}}(.*)$ /$1;
            proxy_pass http://{{.IP}}:{{.Port}}/;
        }
        {{end}}
    }
    {{end}}
}
